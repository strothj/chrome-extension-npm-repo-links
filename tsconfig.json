{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["dom", "es2016"],
    "sourceMap": true,
    "outDir": "./extension/js",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
